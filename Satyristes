;; For Satyrographos 0.0.2 series
(version 0.0.2)

;; Library declaration
(library
  ;; Library name
  (name "texlogo")
  ;; Library version
  (version "0.1.0")
  ;; Files
  (sources
    ((packageDir "src")))
  ;; OPAM package file
  (opam "satysfi-texlogo.opam")
  ;; Dependency
  (dependencies
    ((dist ()) ; Standard library
    )))

;; Library doc declaration
(libraryDoc
  ;; Library doc name
  (name "texlogo-doc")
  ;; Library version
  (version "0.1.0")
  ;; Working directory to build docs
  (workingDirectory "doc")
  ;; Build commands
  (build
    ;; Run SATySFi
    ((satysfi "sample.saty" "-o" "sample.pdf")))
  ;; Files
  (sources
    ((doc "sample.pdf" "doc/sample.pdf")))
  ;; OPAM package file
  (opam "satysfi-texlogo-doc.opam")
  ;; Dependency
  (dependencies
    ((texlogo ()) ; the main library
     (dist ()) ; Standard library
    )))
